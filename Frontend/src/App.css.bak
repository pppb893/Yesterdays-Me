@import url('https://fonts.googleapis.com/css2?family=Itim&family=Kodchasan:wght@200;300;400;500;600;700&display=swap');

/* ======================
   THEME VARIABLES (LIGHT)
   ====================== */
:root {
  --bg1: hsl(210, 45%, 97%);
  --bg2: hsl(210, 30%, 92%);
  --accent: hsl(220, 90%, 55%);
  --paperLine: rgba(0, 0, 0, 0.06);
  --panel: rgba(255, 255, 255, 0.82);
}

/* ======================
   BASE / RESET
   ====================== */
* {
  box-sizing: border-box;
}

html,
body {
  margin: 0;
  padding: 0;
}

body {
  font-family: "Kodchasan", ui-sans-serif, system-ui, -apple-system, Segoe UI,
    Roboto, Helvetica, Arial, "Apple Color Emoji", "Segoe UI Emoji";
  color: hsl(220, 20%, 18%);
}

h1,
h2,
h3,
.view-header h1,
.sidebar-header,
.diary-title-input,
.read-title,
.locked-title {
  font-family: "Itim", "Kodchasan", ui-sans-serif, system-ui;
}

button,
input,
textarea {
  font-family: inherit;
}

a {
  color: inherit;
}

/* ======================
   CORE LAYOUT
   ====================== */
.app-layout {
  display: flex;
  min-height: 100vh;
  background: linear-gradient(180deg, var(--bg1) 0%, var(--bg2) 100%);
}

.sidebar {
  width: 240px;
  margin: 12px;
  border-radius: 20px;
  display: flex;
  flex-direction: column;
  padding: 24px 16px;
  position: sticky;
  top: 12px;
  height: calc(100vh - 24px);

  /* Light */
  background: rgba(255, 255, 255, 0.9);
  border: 1px solid hsl(220, 20%, 84%);
}

.main-content {
  flex: 1;
  padding: 32px;
  overflow-y: auto;
}

/* Common wrappers used in App.tsx */
.container {
  width: 100%;
  max-width: 1100px;
  margin: 0 auto;
}

.view-header {
  margin-bottom: 32px;
  position: relative;
  display: flex;
  align-items: center;
  gap: 24px;
}

.view-header-icon {
  width: 72px;
  height: 72px;
  background: white;
  border-radius: 50%;
  border: 1px solid hsl(220, 20%, 90%);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 2.5rem;
  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.06);
  flex-shrink: 0;
  position: relative;
  z-index: 2;
}

.view-header-text {
  display: flex;
  flex-direction: column;
}

.view-header h1 {
  font-size: 2.8rem;
  font-weight: 800;
  line-height: 1.1;
  letter-spacing: -0.03em;
  background: linear-gradient(135deg, hsl(220, 25%, 15%) 0%, hsl(220, 25%, 35%) 100%);
  -webkit-background-clip: text;
  background-clip: text;
  -webkit-text-fill-color: transparent;
  color: transparent;
  /* Fallback */
  margin-bottom: 4px;
  position: relative;
  display: inline-block;
}

/* Remove underline for now, or make it simpler */
.view-header h1::after {
  content: none;
}

.view-header p {
  font-size: 1.1rem;
  color: hsl(220, 15%, 55%);
  font-weight: 500;
  letter-spacing: -0.01em;
  margin: 0;
}

/* ======================
   GLASS PANEL (LIGHT)
   ====================== */
.glass-panel {
  background: var(--panel);
  backdrop-filter: blur(14px);
  border: 1px solid hsl(220, 20%, 85%);
  border-radius: 20px;
  padding: 24px;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.06);
}

/* ======================
   DIARY PAPER (lined)
   ====================== */
.diary-paper {
  background:
    linear-gradient(to bottom, var(--paperLine) 1px, transparent 1px),
    linear-gradient(135deg, rgba(255, 255, 255, 0.9), rgba(255, 255, 255, 0.75));
  background-size: 100% 34px;
}

/* ======================
   SIDEBAR
   ====================== */
.sidebar-header {
  margin-bottom: 20px;
  color: var(--accent);
  text-align: center;
  font-size: 1.5rem;
  font-weight: bold;
  position: relative;
}

.settings-gear {
  position: absolute;
  right: 4px;
  top: 4px;
  background: transparent;
  border: none;
  cursor: pointer;
  font-size: 1.1rem;
  opacity: 0.85;
  transition: transform 0.2s ease, opacity 0.2s ease;
}

.settings-gear:hover {
  transform: rotate(18deg);
  opacity: 1;
}

.sidebar-nav {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.nav-item {
  display: flex;
  align-items: center;
  gap: 12px;
  background: transparent;
  color: hsl(220, 15%, 40%);
  padding: 12px 16px;
  border-radius: 12px;
  font-weight: 600;
  transition: all 0.2s ease;
  text-align: left;
  width: 100%;
  border: none;
  cursor: pointer;
}

.nav-item:hover,
.nav-item.active {
  background: hsl(220, 90%, 96%);
  color: hsl(220, 25%, 18%);
}

.nav-item.active {
  color: var(--accent);
  background: color-mix(in srgb, var(--accent) 14%, white);
}

.sidebar-footer {
  margin-top: auto;
  padding-top: 16px;
  border-top: 1px solid hsl(220, 20%, 86%);
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.sidebar-hint {
  margin: 0;
  font-size: 0.85rem;
  color: hsl(220, 10%, 45%);
  text-align: center;
}

/* ======================
   PRIVACY BLUR
   ====================== */
.blur-text {
  filter: blur(6px);
  user-select: none;
}

.privacy-blur .blur-text:hover {
  filter: blur(4px);
}

.privacy-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12px;
  color: hsl(220, 12%, 40%);
  font-size: 0.9rem;
}

/* Switch */
.switch {
  position: relative;
  display: inline-block;
  width: 46px;
  height: 26px;
}

.switch input {
  opacity: 0;
  width: 0;
  height: 0;
}

.slider {
  position: absolute;
  cursor: pointer;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: hsl(220, 15%, 86%);
  transition: 0.2s;
  border-radius: 999px;
  border: 1px solid hsl(220, 20%, 78%);
}

.slider:before {
  position: absolute;
  content: "";
  height: 20px;
  width: 20px;
  left: 3px;
  top: 2px;
  background: white;
  transition: 0.2s;
  border-radius: 999px;
  box-shadow: 0 3px 10px rgba(0, 0, 0, 0.12);
}

.switch input:checked+.slider {
  background: color-mix(in srgb, var(--accent) 20%, white);
  border-color: color-mix(in srgb, var(--accent) 35%, white);
}

.switch input:checked+.slider:before {
  transform: translateX(20px);
}

/* ======================
   CARD GRID
   ====================== */
.entries-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
  gap: 24px;
  margin-top: 24px;
}

.entry-card {
  background: rgba(255, 255, 255, 0.9);
  border: 1px solid hsl(220, 20%, 85%);
  border-radius: 20px;
  min-height: 220px;
  cursor: pointer;
  transition: transform 0.25s ease, box-shadow 0.25s ease, border-color 0.25s ease;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.entry-card:hover {
  transform: translateY(-6px);
  box-shadow: 0 14px 36px rgba(0, 0, 0, 0.10);
  border-color: color-mix(in srgb, var(--accent) 35%, white);
}

/* Locked Card */
.locked-card {
  background: linear-gradient(180deg,
      rgba(255, 255, 255, 0.96) 0%,
      rgba(245, 247, 252, 0.98) 100%);
  border-color: hsl(220, 20%, 82%);
}

.locked-card-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  height: 100%;
  padding: 24px 20px;
  text-align: center;
}

.locked-title {
  font-size: 1.3rem;
  font-weight: 800;
  color: hsl(220, 25%, 18%);
  width: 100%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  padding-bottom: 16px;
  border-bottom: 1px solid hsl(220, 20%, 88%);
}

.locked-center {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: hsl(220, 12%, 45%);
  flex-grow: 1;
  justify-content: center;
  gap: 8px;
}

.locked-label {
  font-size: 0.75rem;
  font-weight: 800;
  letter-spacing: 0.25em;
  text-transform: uppercase;
  color: hsl(220, 10%, 45%);
}

.countdown {
  font-family: "JetBrains Mono", "Fira Code", ui-monospace, SFMono-Regular, Menlo,
    Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
  font-size: 1.6rem;
  font-weight: 700;
  color: var(--accent);
  padding: 12px 20px;
  background: color-mix(in srgb, var(--accent) 10%, white);
  border-radius: 12px;
  border: 1px solid color-mix(in srgb, var(--accent) 28%, white);
  letter-spacing: 0.1em;
  text-shadow: 0 0 18px rgba(0, 0, 0, 0.06);
}

/* Unlocked Card */
.card-header {
  padding: 16px 20px 8px;
  font-size: 0.8rem;
  color: hsl(220, 12%, 45%);
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 10px;
}

.mood-pill {
  font-size: 0.95rem;
  padding: 2px 10px;
  border-radius: 999px;
  background: hsl(220, 90%, 96%);
  border: 1px solid hsl(220, 25%, 86%);
}

.entry-card h3 {
  font-size: 1.2rem;
  font-weight: 700;
  color: hsl(220, 25%, 18%);
  margin: 0;
  padding: 0 20px;
}

.preview-text {
  font-size: 0.95rem;
  color: hsl(220, 12%, 45%);
  padding: 12px 20px 20px;
  line-height: 1.6;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  line-clamp: 3;
  overflow: hidden;
}

/* Create Card */
.create-card {
  border: 2px dashed hsl(220, 20%, 75%);
  background: rgba(255, 255, 255, 0.55);
  align-items: center;
  justify-content: center;
  color: hsl(220, 12%, 45%);
  gap: 8px;
}

.create-card:hover {
  border-color: var(--accent);
  color: var(--accent);
  background: color-mix(in srgb, var(--accent) 8%, white);
}

.icon-wrapper {
  margin-bottom: 4px;
}

/* ======================
   COMMON
   ====================== */
.subtitle {
  color: hsl(220, 10%, 45%);
  margin-bottom: 24px;
}

.btn-text {
  background: transparent;
  color: hsl(220, 12%, 45%);
  padding: 8px 16px;
  border: none;
  cursor: pointer;
  transition: color 0.2s;
  font-weight: 600;
}

.btn-text:hover {
  color: hsl(220, 25%, 18%);
}

.btn-primary {
  background: linear-gradient(135deg,
      var(--accent) 0%,
      color-mix(in srgb, var(--accent) 75%, hsl(230, 90%, 45%)) 100%);
  color: white;
  padding: 12px 28px;
  border-radius: 12px;
  font-weight: 700;
  border: none;
  cursor: pointer;
  transition: transform 0.2s, box-shadow 0.2s;
}

.btn-primary:hover {
  transform: translateY(-2px);
  box-shadow: 0 10px 24px rgba(0, 0, 0, 0.12);
}

.mobile-only {
  display: none;
}

.fab-button {
  position: fixed;
  bottom: 28px;
  right: 28px;
  width: 60px;
  height: 60px;
  border-radius: 50%;
  background: linear-gradient(135deg,
      var(--accent) 0%,
      color-mix(in srgb, var(--accent) 75%, hsl(230, 90%, 45%)) 100%);
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 12px 28px rgba(0, 0, 0, 0.14);
  border: none;
  cursor: pointer;
}

/* ======================
   WRITER VIEW (NO STICKERS)
   ====================== */
.writer-view {
  padding-top: 12px;
}

.writer-panel {
  max-width: 900px;
  margin: 0 auto;
  min-height: 640px;
  display: flex;
  flex-direction: column;
}

.writer-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24px;
}

.diary-title-input {
  background: transparent;
  border: none;
  font-size: 2rem;
  font-weight: 800;
  color: hsl(220, 25%, 18%);
  margin-bottom: 14px;
  width: 100%;
  outline: none;
}

.mood-picker {
  display: flex;
  flex-direction: column;
  gap: 8px;
  margin-bottom: 16px;
}

.mood-label {
  font-size: 0.9rem;
  color: hsl(220, 10%, 45%);
}

.mood-options {
  display: flex;
  gap: 8px;
  flex-wrap: wrap;
}

.mood-btn {
  font-size: 1.5rem;
  padding: 8px 12px;
  background: rgba(255, 255, 255, 0.85);
  border: 1px solid hsl(220, 20%, 85%);
  border-radius: 12px;
  cursor: pointer;
  transition: all 0.2s ease;
}

.mood-btn:hover {
  background: hsl(220, 90%, 96%);
  transform: scale(1.06);
  border-color: hsl(220, 30%, 82%);
}

.mood-btn.selected {
  border-color: color-mix(in srgb, var(--accent) 55%, white);
  background: color-mix(in srgb, var(--accent) 10%, white);
  transform: scale(1.10);
}

/* Textarea + voice */
.textarea-wrapper {
  position: relative;
  display: flex;
  flex-direction: column;
  margin-top: 8px;
  border-radius: 18px;
  background: rgba(255, 255, 255, 0.85);
  border: 1px solid hsl(220, 20%, 85%);
  padding: 16px;
}

.diary-input {
  min-height: 360px;
  background: transparent;
  border: none;
  resize: none;
  font-size: 1.12rem;
  line-height: 34px;
  color: hsl(220, 25%, 18%);
  outline: none;
  padding-right: 64px;
  white-space: pre-wrap;
}

.voice-btn {
  position: absolute;
  bottom: 16px;
  right: 16px;
  width: 48px;
  height: 48px;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.95);
  border: 1px solid hsl(220, 20%, 80%);
  font-size: 1.5rem;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.25s ease;
  box-shadow: 0 8px 18px rgba(0, 0, 0, 0.10);
}

.voice-btn:hover {
  background: hsl(220, 90%, 96%);
  transform: scale(1.08);
  border-color: color-mix(in srgb, var(--accent) 30%, white);
}

.voice-btn.listening {
  background: hsla(0, 70%, 55%, 0.15);
  border-color: hsla(0, 70%, 55%, 0.55);
  animation: pulse 1.5s infinite;
}

@keyframes pulse {

  0%,
  100% {
    transform: scale(1);
    opacity: 1;
  }

  50% {
    transform: scale(1.08);
    opacity: 0.85;
  }
}

.writer-actions {
  display: flex;
  justify-content: flex-end;
  border-top: 1px solid hsl(220, 20%, 88%);
  padding-top: 20px;
  margin-top: 20px;
}

/* ======================
   READ VIEW
   ====================== */
.read-view {
  padding-top: 12px;
}

.read-header-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16px;
}

.btn-back {
  display: flex;
  align-items: center;
  gap: 8px;
  background: transparent;
  color: hsl(220, 12%, 45%);
  padding: 10px 16px;
  border: none;
  border-radius: 10px;
  cursor: pointer;
  font-weight: 700;
  margin-bottom: 24px;
  transition: all 0.2s ease;
}

.btn-back:hover {
  color: hsl(220, 25%, 18%);
  background: rgba(0, 0, 0, 0.04);
}

.btn-delete {
  display: flex;
  align-items: center;
  gap: 6px;
  background: hsla(0, 70%, 55%, 0.12);
  color: hsl(0, 70%, 40%);
  border: 1px solid hsla(0, 70%, 55%, 0.30);
  padding: 8px 16px;
  border-radius: 8px;
  cursor: pointer;
  font-size: 0.9rem;
  transition: all 0.2s ease;
  font-weight: 800;
}

.btn-delete:hover {
  background: hsla(0, 70%, 55%, 0.18);
  border-color: hsla(0, 70%, 55%, 0.42);
}

.btn-danger {
  background: linear-gradient(135deg, hsl(0, 80%, 52%), hsl(0, 70%, 46%));
  color: white;
  border: none;
  padding: 12px 24px;
  border-radius: 10px;
  cursor: pointer;
  font-weight: 800;
  transition: all 0.2s ease;
}

.btn-danger:hover {
  transform: translateY(-1px);
  filter: brightness(1.05);
}

.read-layout {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24px;
}

.read-card {
  min-height: 420px;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.read-card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16px;
  padding-bottom: 12px;
  border-bottom: 1px solid hsl(220, 20%, 88%);
}

.read-label {
  font-size: 1rem;
  font-weight: 800;
  color: var(--accent);
}

.read-date {
  font-size: 0.85rem;
  color: hsl(220, 10%, 45%);
}

.read-title {
  font-size: 1.5rem;
  font-weight: 900;
  color: hsl(220, 25%, 18%);
  margin-bottom: 14px;
}

.read-content {
  font-size: 1.05rem;
  line-height: 34px;
  color: hsl(220, 15%, 28%);
  white-space: pre-wrap;
  flex-grow: 1;
}

.reflection-prompts {
  background: rgba(0, 0, 0, 0.03);
  border: 1px solid hsl(220, 20%, 88%);
  border-radius: 12px;
  padding: 16px;
  margin-bottom: 20px;
}

.reflection-prompts p {
  color: hsl(220, 12%, 45%);
  font-size: 0.95rem;
  margin: 6px 0;
}

.reflection-input {
  min-height: 150px;
  background: rgba(255, 255, 255, 0.9);
  border: 1px solid hsl(220, 20%, 85%);
  border-radius: 12px;
  padding: 16px;
  font-size: 1rem;
  line-height: 34px;
  color: hsl(220, 25%, 18%);
  resize: none;
  outline: none;
  font-family: inherit;
}

.reflection-input:focus {
  border-color: color-mix(in srgb, var(--accent) 35%, white);
  box-shadow: 0 0 0 4px color-mix(in srgb, var(--accent) 14%, white);
}

.response-section {
  margin-top: 20px;
  padding-top: 20px;
  border-top: 1px solid hsl(220, 20%, 88%);
}

.response-label {
  color: hsl(220, 12%, 45%);
  font-size: 0.9rem;
  margin-bottom: 12px;
}

.response-options {
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.response-option {
  display: flex;
  align-items: center;
  gap: 14px;
  padding: 14px 18px;
  border-radius: 12px;
  border: 1px solid hsl(220, 20%, 85%);
  background: rgba(255, 255, 255, 0.85);
  cursor: pointer;
  transition: all 0.2s ease;
}

.response-option:hover {
  background: hsl(220, 90%, 97%);
}

.response-option.selected {
  border-color: color-mix(in srgb, var(--accent) 45%, white);
  background: color-mix(in srgb, var(--accent) 10%, white);
}

.response-option input[type="radio"] {
  display: none;
}

.response-icon {
  font-size: 1.6rem;
}

.response-title {
  font-size: 1.05rem;
  font-weight: 900;
  color: hsl(220, 25%, 18%);
  display: block;
}

.response-desc {
  font-size: 0.85rem;
  color: hsl(220, 12%, 45%);
  display: block;
  margin-top: 2px;
}

.submit-btn {
  width: 100%;
  margin-top: 16px;
  padding: 14px 24px;
}

.submit-btn:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

/* ======================
   MODAL (LIGHT)
   ====================== */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(10, 15, 25, 0.45);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  backdrop-filter: blur(8px);
}

.modal-content {
  width: 90%;
  max-width: 420px;
  text-align: center;
  padding: 40px;
  animation: modalIn 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  background: rgba(255, 255, 255, 0.96);
  border: 1px solid hsl(220, 20%, 85%);
  border-radius: 20px;
  box-shadow: 0 18px 50px rgba(0, 0, 0, 0.18);
}

.nav-item {
  display: flex;
  align-items: center;
  gap: 10px;
}

.icon-box {
  width: 24px;
  height: 24px;
  display: flex;
  align-items: center;
  justify-content: center;
  flex: 0 0 24px;
}

.icon-box svg {
  width: 20px;
  height: 20px;
  display: block;
}

.modal-icon {
  color: var(--accent);
  margin-bottom: 16px;
}

.modal-buttons {
  display: flex;
  gap: 12px;
  justify-content: center;
  margin-top: 24px;
}

.btn-secondary {
  padding: 12px 24px;
  border-radius: 12px;
  font-weight: 800;
  background: white;
  color: hsl(220, 12%, 45%);
  border: 1px solid hsl(220, 20%, 84%);
  cursor: pointer;
  transition: all 0.2s ease;
}

.btn-secondary:hover {
  color: hsl(220, 25%, 18%);
  border-color: hsl(220, 20%, 78%);
  background: hsl(220, 90%, 97%);
}

@keyframes modalIn {
  from {
    opacity: 0;
    transform: scale(0.92) translateY(10px);
  }

  to {
    opacity: 1;
    transform: scale(1) translateY(0);
  }
}

/* AI Result */
