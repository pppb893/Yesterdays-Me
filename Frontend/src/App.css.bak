}

/* Mental Hero */
.mental-hero {
  text-align: center;
  padding: 40px;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.9), rgba(245, 247, 252, 0.95));
  border: 1px solid hsl(220, 20%, 88%);
}

.mental-emoji {
  font-size: 4rem;
  margin-bottom: 16px;
}

.mental-score-display {
