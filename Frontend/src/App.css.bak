  flex: 2;
  padding: 12px;
  background: linear-gradient(135deg, hsl(260, 80%, 60%), hsl(320, 80%, 60%));
  border: none;
  color: white;
  border-radius: 12px;
  font-weight: 600;
  cursor: pointer;
  box-shadow: 0 4px 12px hsla(280, 60%, 40%, 0.4);
  transition: all 0.2s;
}

.btn-gradient:hover {
  transform: translateY(-1px);
  box-shadow: 0 6px 16px hsla(280, 70%, 40%, 0.5);
}

.btn-gradient:disabled {
  opacity: 0.7;
  cursor: default;
  transform: none;
}
/* ======================
   PUBLIC VIEW & FEED (PREMIUM)
   ====================== */
.public-view {
    padding-bottom: 80px;
}

.public-feed {
    display: flex;
    flex-direction: column;
    gap: 32px;
    margin-top: 32px;
}

.public-entry-card {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    max-width: 800px;
    border-radius: 24px;
    background: rgba(255, 255, 255, 0.7);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.4);
    box-shadow:
        0 4px 6px -1px rgba(0, 0, 0, 0.01),
        0 10px 15px -3px rgba(0, 0, 0, 0.01),
        0 20px 25px -5px rgba(0, 0, 0, 0.01);
    overflow: visible;
    position: relative;
}

.public-entry-card:hover {
    transform: translateY(-4px);
    background: rgba(255, 255, 255, 0.85);
    box-shadow:
        0 20px 40px -5px rgba(0, 0, 0, 0.05),
        0 8px 10px -6px rgba(0, 0, 0, 0.01);
    border-color: rgba(255, 255, 255, 0.8);
}

.entry-author-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 16px;
    padding-bottom: 12px;
    border-bottom: 1px dashed rgba(0, 0, 0, 0.06);
}

.author-name {
    font-weight: 800;
    color: var(--accent);
    font-size: 0.95rem;
    display: flex;
    align-items: center;
    gap: 6px;
}

.entry-date {
    font-size: 0.8rem;
    color: hsl(220, 10%, 60%);
    font-weight: 500;
}

.public-entry-title {
    font-size: 1.5rem;
    font-weight: 800;
    margin-bottom: 12px;
    line-height: 1.3;
    color: hsl(220, 25%, 20%);
    letter-spacing: -0.01em;
}

.public-entry-content {
    line-height: 1.7;
    margin-bottom: 20px;
    white-space: pre-wrap;
    color: hsl(220, 15%, 35%);
    font-size: 1.05rem;
}

.public-entry-mood {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    font-size: 0.85rem;
    color: hsl(220, 15%, 40%);
    margin-bottom: 24px;
    padding: 6px 14px;
    background: linear-gradient(135deg, hsl(220, 20%, 96%), hsl(220, 30%, 94%));
    border-radius: 20px;
    border: 1px solid rgba(255, 255, 255, 0.5);
    font-weight: 600;
}

/* ======================
   COMMENTS SECTION (CHAT STYLE)
   ====================== */
.comments-section {
    border-top: 1px solid rgba(0, 0, 0, 0.04);
    padding-top: 20px;
    margin-top: 8px;
}

.show-comments-btn {
    font-size: 0.9rem;
    font-weight: 700;
    color: hsl(220, 15%, 50%);
    padding: 8px 12px;
    margin-left: -12px;
    border-radius: 10px;
    transition: all 0.2s;
    display: flex;
    align-items: center;
    gap: 6px;
}

.show-comments-btn:hover {
    background: rgba(0, 0, 0, 0.03);
    color: var(--accent);
}

.comments-list {
    display: flex;
    flex-direction: column;
    gap: 16px;
    margin-top: 20px;
    margin-bottom: 24px;
}

.comment-item {
    background: white;
    padding: 14px 18px;
    border-radius: 18px;
    border-bottom-left-radius: 4px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.03);
    max-width: 90%;
    align-self: flex-start;
    border: 1px solid rgba(0, 0, 0, 0.03);
}

.comment-author {
    display: flex;
    align-items: baseline;
    gap: 8px;
    margin-bottom: 6px;
    font-size: 0.85rem;
}

.comment-author strong {
    color: hsl(220, 25%, 30%);
}

.comment-date {
    font-size: 0.75rem;
    color: hsl(220, 10%, 70%);
}

.comment-content {
    font-size: 0.95rem;
    line-height: 1.5;
    color: hsl(220, 20%, 25%);
}

.comment-input-area {
    margin-top: 20px;
    background: white;
    padding: 16px;
    border-radius: 20px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.04);
    border: 1px solid rgba(0, 0, 0, 0.03);
    display: flex;
    flex-direction: column;
    gap: 12px;
}

.comment-input-area textarea {
    width: 100%;
    min-height: 60px;
    border: 1px solid hsl(220, 20%, 90%);
    border-radius: 14px;
    padding: 12px 14px;
    background: hsl(220, 30%, 98%);
    font-size: 0.95rem;
    resize: vertical;
    transition: all 0.2s;
    color: hsl(220, 25%, 20%);
}

.comment-input-area textarea:focus {
    background: white;
    border-color: var(--accent);
    outline: none;
    box-shadow: 0 0 0 3px color-mix(in srgb, var(--accent) 10%, transparent);
}

.comment-actions {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.checkbox-control {
    font-size: 0.85rem;
    color: hsl(220, 15%, 55%);
    cursor: pointer;
    user-select: none;
    display: flex;
    align-items: center;
    gap: 6px;
}

.checkbox-control input {
    accent-color: var(--accent);
    width: 16px;
    height: 16px;
}

.btn-sm {
    padding: 8px 24px;
    font-size: 0.9rem;
    border-radius: 99px;
    /* Pill shape */
    background: var(--accent);
    color: white;
    font-weight: 600;
    box-shadow: 0 4px 12px color-mix(in srgb, var(--accent) 40%, transparent);
}

.btn-sm:disabled {
    background: hsl(220, 10%, 85%);
    color: hsl(220, 10%, 60%);
    box-shadow: none;
}

/* ======================
   FAB & EMPTY STATES
   ====================== */
.empty-state {
    text-align: center;
    padding: 60px 20px;
    color: hsl(220, 15%, 60%);
    font-weight: 500;
    background: rgba(255, 255, 255, 0.4);
    border: 2px dashed rgba(0, 0, 0, 0.05);
    border-radius: 24px;
}
/* ======================
   RESPONSIVE (MOBILE OPTIMIZATION)
   ====================== */
@media (max-width: 900px) {
    .read-layout {
        grid-template-columns: 1fr;
    }
}

@media (max-width: 768px) {
    .app-layout {
        flex-direction: column;
    }

    /* 1. Mobile Navigation (Bottom Bar) */
    .sidebar {
        width: 100%;
        height: auto;
        position: fixed;
        bottom: 0;
        left: 0;
        right: 0;
        margin: 0;
        border-radius: 20px 20px 0 0;
        padding: 10px 16px 16px;
        z-index: 1000;
        border: none;
        border-top: 1px solid hsl(220, 20%, 85%);
        box-shadow: 0 -4px 20px rgba(0, 0, 0, 0.08);
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
    }

    .sidebar-header,
    .sidebar-footer,
    .sidebar-hint {
        display: none;
    }

    .sidebar-nav {
        flex-direction: row;
        justify-content: space-around;
        align-items: center;
        gap: 4px;
        padding: 0;
    }

    .nav-item {
        flex-direction: column;
        gap: 4px;
        padding: 8px;
        font-size: 0.75rem;
        text-align: center;
        border-radius: 12px;
        justify-content: center;
        width: auto;
        flex: 1;
    }

    .nav-item .icon-box {
        width: 24px;
        height: 24px;
        margin-bottom: 2px;
    }

    .nav-item span:last-child {
        font-size: 0.7rem;
        font-weight: 700;
    }

    .logout-btn {
        display: none !important;
    }

    /* Profile in Nav (Mobile) */
    .sidebar-profile {
        padding: 4px;
        flex-direction: column;
        gap: 2px;
        background: transparent;
        border: none;
        box-shadow: none;
    }

    .sidebar-profile:hover {
        background: transparent;
        transform: none;
        box-shadow: none;
    }

    .profile-avatar {
        width: 32px;
        height: 32px;
        font-size: 1rem;
        border-radius: 10px;
    }

    .profile-info {
        display: none;
    }

    /* 2. Main Content Adjustments */
    .main-content {
        padding: 16px 16px 100px 16px;
        /* Bottom padding for nav bar */
        overflow-y: auto;
    }

    .public-view {
        padding-bottom: 100px;
        /* Ensure content clears nav */
    }

    .container {
        padding: 0;
        width: 100%;
    }

    /* 3. Header & Typography */
    .view-header {
        flex-direction: row;
        align-items: center;
        gap: 16px;
        margin-bottom: 24px;
    }

    .view-header-icon {
        width: 56px;
        height: 56px;
        font-size: 2rem;
    }

    .view-header h1 {
        font-size: 2rem;
    }

    .view-header p.subtitle {
        font-size: 0.95rem;
        margin-bottom: 0;
    }

    /* 4. Grids & Layouts */
    .entries-grid {
        grid-template-columns: 1fr;
        gap: 16px;
    }

    .stats-grid {
        grid-template-columns: repeat(2, 1fr);
        gap: 12px;
    }

    .theme-grid {
        grid-template-columns: 1fr;
    }

    .create-card {
        display: none;
    }

    .mobile-only {
        display: flex;
        /* Show FAB */
    }

    /* 5. Calendar Overflow Fix */
    .calendar-view {
        max-width: 100%;
    }

    .calendar-panel {
        padding: 16px 12px;
    }

    .calendar-grid {
        gap: 4px;
    }

    .calendar-day {
        min-height: 48px;
        border-radius: 6px;
    }

    .day-number {
        font-size: 0.85rem;
    }

    .day-mood {
        font-size: 0.75rem;
    }

    /* 6. Modal & Profile Fixes */
    .modal-content,
    .profile-modal-glass,
    .settings-modal {
        width: 92%;
        max-width: 92%;
        padding: 24px 20px;
        max-height: 85vh;
        overflow-y: auto;
    }

    .emoji-grid-modern {
        grid-template-columns: repeat(auto-fit, minmax(36px, 1fr));
        gap: 8px;
    }

    .emoji-choice {
        font-size: 1.25rem;
        padding: 4px;
    }

    .profile-preview-section {
        margin-bottom: 20px;
    }

    .avatar-xl,
    .avatar-placeholder-xl {
        width: 80px;
        height: 80px;
        font-size: 3rem;
    }

    /* 7. Writer & Public Feed */
    .writer-panel {
        min-height: auto;
    }

    .diary-input {
        min-height: 280px;
        padding-right: 16px;
    }

    .voice-btn {
        width: 42px;
        height: 42px;
        font-size: 1.2rem;
    }

    .public-entry-card {
        margin: 0 -8px;
        /* Slightly wider on mobile */
        width: auto;
        border-radius: 16px;
    }

    .public-entry-title {
        font-size: 1.3rem;
    }

    .comment-item {
        max-width: 100%;
    }
}
/* ======================
    NEW: CUSTOMER FEEDBACK STYLES
   ====================== */

/* Help & Settings Icon Group */
.sidebar-header h3 {
    margin-right: auto;
}

.settings-gear {
    background: transparent;
    border: none;
    font-size: 1.5rem;
    cursor: pointer;
    opacity: 0.6;
    transition: all 0.2s;
    padding: 4px;
    border-radius: 8px;
}

.settings-gear:hover {
    opacity: 1;
    background: rgba(0, 0, 0, 0.05);
    transform: scale(1.1);
}

/* Quote Sticker */
.quote-sticker {
    margin-top: 20px;
    background: #fff9c4;
    /* Post-it yellow */
    padding: 12px 16px;
    border-radius: 2px 2px 12px 2px;
    position: relative;
    box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
    transform: rotate(-1deg);
    border: 1px solid rgba(0, 0, 0, 0.05);
    font-size: 0.85rem;
    color: #555;
    line-height: 1.5;
    font-family: 'Sarabun', sans-serif;
    /* Example font */
    transition: transform 0.3s ease;
}

.quote-sticker:hover {
    transform: rotate(0deg) scale(1.02);
}

.quote-pin {
    position: absolute;
    top: -8px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 1.2rem;
    filter: drop-shadow(1px 2px 2px rgba(0, 0, 0, 0.2));
}

.quote-text {
    margin: 0;
    font-style: italic;
    text-align: center;
}

/* Global FAB Override for Desktop/Mobile */
.fab-button.mobile-global-fab {
    box-shadow: 0 4px 20px var(--accent);
    z-index: 100;
}

/* Ensure FAB is positioned correctly on Desktop if not already */
@media (min-width: 769px) {
    .fab-button.mobile-global-fab {
        position: fixed;
        bottom: 40px;
        right: 40px;
    }
}

@media (max-width: 768px) {

    /* Adjust FAB for mobile bottom nav */
    .fab-button.mobile-global-fab {
        bottom: 90px;
        /* Above nav bar */
        right: 20px;
    }

    .quote-sticker {
        display: none;
        /* Keep hidden on mobile sidebar */
    }
}

/* Modal Content Styling */
.modal-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
    padding-bottom: 10px;
}

.modal-header h2 {
    font-size: 1.5rem;
    margin: 0;
}

.close-btn {
    background: transparent;
    border: none;
    font-size: 1.8rem;
    cursor: pointer;
    color: #999;
}

.close-btn:hover {
    color: #333;
}
/* ======================
    REFLECTION HISTORY & FINISHED STATE
   ====================== */

.reflection-history {
    margin-bottom: 24px;
    padding: 16px;
    background: rgba(255, 255, 255, 0.4);
    border-radius: 12px;
    max-height: 200px;
    overflow-y: auto;
}

.reflection-history h4 {
    margin: 0 0 12px 0;
    font-size: 1rem;
    color: var(--text-secondary);
}

.history-item {
    padding: 12px;
    background: rgba(255, 255, 255, 0.6);
    border-radius: 8px;
    margin-bottom: 10px;
    border-left: 3px solid var(--accent);
}

.history-date {
    font-size: 0.75rem;
    color: var(--text-secondary);
    display: block;
    margin-bottom: 4px;
}

.history-content {
    font-style: italic;
    color: var(--text-primary);
    margin: 4px 0;
}

.history-status {
    display: inline-block;
    font-size: 0.8rem;
    padding: 2px 8px;
    border-radius: 12px;
    background: rgba(0, 0, 0, 0.05);
    margin-top: 4px;
}

.history-ai {
    margin-top: 8px;
    font-size: 0.85rem;
    color: var(--accent);
    background: rgba(var(--accent-rgb), 0.1);
    padding: 6px 10px;
    border-radius: 8px;
}

/* Finished State */
.finished-state {
    text-align: center;
    padding: 30px;
}

.finished-badge {
    display: inline-block;
    padding: 8px 16px;
    background: #4caf50;
    color: white;
    border-radius: 20px;
    font-weight: bold;
    margin-bottom: 20px;
    box-shadow: 0 4px 10px rgba(76, 175, 80, 0.3);
}

.final-summary {
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.8), rgba(255, 255, 255, 0.4));
    border: 1px solid rgba(255, 255, 255, 0.6);
    padding: 20px;
}

.final-summary h3 {
    color: #fbc02d;
    /* Gold */
    margin-top: 0;
}
