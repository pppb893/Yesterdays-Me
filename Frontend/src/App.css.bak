/* Stats Grid */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
  gap: 16px;
}

.stat-card {
  text-align: center;
  padding: 24px 16px;
}

.stat-icon {
  font-size: 2rem;
  margin-bottom: 8px;
}

.stat-value {
  font-size: 2.2rem;
  font-weight: 900;
  color: hsl(220, 25%, 18%);
}

.stat-label {
  font-size: 0.85rem;
  color: hsl(220, 12%, 45%);
  margin-top: 4px;
}

.stat-green .stat-value {
  color: hsl(140, 55%, 35%);
}

.stat-yellow .stat-value {
  color: hsl(35, 90%, 40%);
}

.stat-red .stat-value {
  color: hsl(0, 80%, 45%);
}

.stat-gray .stat-value {
  color: hsl(220, 10%, 45%);
}

/* Chart */
.chart-section {
  padding: 24px;
}

.chart-section h3 {
  margin-bottom: 16px;
  font-size: 1.1rem;
  color: hsl(220, 25%, 18%);
}

.status-bar-chart {
  display: flex;
  height: 32px;
  border-radius: 8px;
  overflow: hidden;
  background: hsl(220, 15%, 92%);
  border: 1px solid hsl(220, 20%, 88%);
}

.bar-segment {
  transition: width 0.5s ease;
}

.bar-segment.green {
  background: hsl(140, 55%, 40%);
}

.bar-segment.yellow {
  background: hsl(35, 90%, 55%);
}

.bar-segment.red {
  background: hsl(0, 80%, 55%);
}

.chart-legend {
  display: flex;
  justify-content: center;
  gap: 24px;
  margin-top: 16px;
}

.legend-item {
  display: flex;
  align-items: center;
  gap: 6px;
  font-size: 0.85rem;
  color: hsl(220, 12%, 45%);
}

.dot {
  width: 10px;
  height: 10px;
  border-radius: 50%;
}

.dot.green {
  background: hsl(140, 55%, 40%);
}

.dot.yellow {
  background: hsl(35, 90%, 55%);
}

.dot.red {
  background: hsl(0, 80%, 55%);
}

/* AI Summary */
.ai-summary-section {
  padding: 24px;
}

.ai-summary-section h3 {
  margin-bottom: 16px;
  font-size: 1.1rem;
  color: hsl(220, 25%, 18%);
}

.ai-summary-text {
  line-height: 1.8;
  color: hsl(220, 15%, 28%);
  font-size: 0.95rem;
  background: hsl(220, 90%, 98%);
  border: 1px solid hsl(220, 20%, 88%);
  padding: 20px;
  border-radius: 12px;
}

/* ======================
   CALENDAR VIEW
   ====================== */
.calendar-view {
  max-width: 800px;
}

.calendar-panel {
  padding: 24px;
}

.calendar-nav {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24px;
}

.calendar-nav button {
  background: rgba(255, 255, 255, 0.9);
  border: 1px solid hsl(220, 20%, 85%);
  color: hsl(220, 15%, 28%);
  padding: 8px 16px;
  border-radius: 8px;
  cursor: pointer;
  font-size: 1.2rem;
  transition: all 0.2s ease;
}

.calendar-nav button:hover {
  background: hsl(220, 90%, 97%);
}

.calendar-nav span {
  font-size: 1.2rem;
  font-weight: 900;
  color: hsl(220, 25%, 18%);
}

.calendar-grid {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 8px;
}

.calendar-day-header {
  text-align: center;
  font-size: 0.85rem;
  color: hsl(220, 12%, 45%);
  padding: 8px;
  font-weight: 900;
}

.calendar-day {
  aspect-ratio: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.9);
  border: 1px solid hsl(220, 20%, 88%);
  border-radius: 8px;
  cursor: pointer;
  transition: all 0.2s ease;
  position: relative;
  min-height: 60px;
}

.calendar-day.empty {
  background: transparent;
  border: none;
  cursor: default;
}

.calendar-day:not(.empty):hover {
  background: hsl(220, 90%, 97%);
  transform: scale(1.04);
}

.calendar-day.has-entry {
  border: 2px solid color-mix(in srgb, var(--accent) 35%, white);
  background: color-mix(in srgb, var(--accent) 8%, white);
}

.calendar-day.status-green {
  border-color: hsl(140, 55%, 40%);
  background: hsla(140, 55%, 40%, 0.10);
}

.calendar-day.status-yellow {
  border-color: hsl(35, 90%, 55%);
  background: hsla(35, 90%, 55%, 0.12);
}

.calendar-day.status-red {
  border-color: hsl(0, 80%, 55%);
  background: hsla(0, 80%, 55%, 0.10);
}

.day-number {
  font-size: 0.95rem;
  color: hsl(220, 25%, 18%);
  font-weight: 800;
}

.day-mood {
  font-size: 0.9rem;
  margin-top: 2px;
}

.day-count {
  position: absolute;
  top: 4px;
  right: 4px;
  font-size: 0.65rem;
  color: hsl(220, 12%, 45%);
}

/* ======================
   AI ALERTS & Q&A
   ====================== */
.ai-alerts {
  margin-bottom: 20px;
}

.alert-banner {
  display: flex;
  flex-direction: column;
  gap: 4px;
  padding: 16px 20px;
  border-radius: 12px;
  margin-bottom: 12px;
  background: rgba(255, 255, 255, 0.9);
  border: 1px solid hsl(220, 20%, 88%);
}

.alert-banner.alert-critical {
  background: hsla(0, 80%, 55%, 0.10);
  border: 1px solid hsla(0, 80%, 55%, 0.35);
}

.alert-banner.alert-warning {
  background: hsla(35, 90%, 55%, 0.12);
  border: 1px solid hsla(35, 90%, 55%, 0.35);
}

.alert-banner.alert-info {
  background: hsla(210, 90%, 55%, 0.10);
  border: 1px solid hsla(210, 90%, 55%, 0.30);
}

.alert-title {
  font-weight: 900;
  font-size: 1rem;
  color: hsl(220, 25%, 18%);
}

.alert-message {
  font-size: 0.9rem;
  color: hsl(220, 12%, 45%);
}

.ai-questions {
  padding: 20px;
  margin-bottom: 20px;
}

.ai-questions h3 {
  margin: 0 0 4px 0;
  font-size: 1.1rem;
  color: var(--accent);
}

.ai-questions-subtitle {
  margin: 0 0 16px 0;
  font-size: 0.85rem;
  color: hsl(220, 12%, 45%);
}

.questions-list {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.question-card {
  background: rgba(255, 255, 255, 0.9);
  border: 1px solid hsl(220, 20%, 88%);
  border-radius: 12px;
  padding: 16px;
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.question-text {
  font-size: 0.95rem;
  color: hsl(220, 25%, 18%);
  font-weight: 700;
}

.question-input-row {
  display: flex;
  gap: 8px;
}

.question-input-row input {
  flex: 1;
  background: rgba(255, 255, 255, 0.95);
  border: 1px solid hsl(220, 20%, 85%);
  border-radius: 8px;
  padding: 10px 14px;
  color: hsl(220, 25%, 18%);
  font-size: 0.9rem;
}

.question-input-row input:focus {
  outline: none;
  border-color: color-mix(in srgb, var(--accent) 40%, white);
  box-shadow: 0 0 0 4px color-mix(in srgb, var(--accent) 14%, white);
}

.question-input-row button {
  background: linear-gradient(135deg,
      var(--accent),
      color-mix(in srgb, var(--accent) 75%, hsl(230, 90%, 45%)));
  border: none;
  border-radius: 8px;
  padding: 10px 20px;
  color: white;
  font-weight: 900;
  cursor: pointer;
  transition: all 0.2s ease;
}

.question-input-row button:hover:not(:disabled) {
  transform: translateY(-1px);
}

.question-input-row button:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

/* ======================
   RESPONSIVE
   ====================== */
@media (max-width: 900px) {
  .read-layout {
    grid-template-columns: 1fr;
  }
}

@media (max-width: 768px) {
  .app-layout {
    flex-direction: column;
  }

  .sidebar {
    width: 100%;
    height: auto;
    position: static;
    margin: 0;
    border-radius: 0;
    padding: 12px;
  }

  .sidebar-nav {
    flex-direction: row;
    justify-content: space-around;
  }

  .mobile-only {
    display: flex;
  }

  .create-card {
    display: none;
  }

  .main-content {
    padding: 20px;
  }

  .stats-grid {
    grid-template-columns: repeat(2, 1fr);
  }

  .mental-emoji {
    font-size: 3rem;
  }

  .score-number {
    font-size: 2.5rem;
  }

  .theme-grid {
    grid-template-columns: 1fr;
  }
}

